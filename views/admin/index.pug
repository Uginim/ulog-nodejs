extends layout

block content
    .container
        if user
            h1.py-3 Administrator Page
            ul.nav.nav-tabs(role='tablist')
                li.nav-item
                    a#home-tab.nav-link.active(href='#home' data-toggle="tab" role='tab' aria-controls="home" aria-selected="true") Blog info                        
                li.nav-item
                    a#profile-tab.nav-link(href='#profile' data-toggle="tab" role='tab' aria-controls="profile" aria-selected="false") My Profile
                li.nav-item
                    a#posts-tab.nav-link(href='#posts' data-toggle="tab" role='tab'  aria-controls="posts" aria-selected="false") Posts
                li.nav-item
                    a#categories-tab.nav-link(href='#categories' data-toggle="tab" role='tab'  aria-controls="categories" aria-selected="false") Categories
            .tab-content
                #home.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='home-tab')
                    .container                        
                #profile.tab-pane.fade(role='tabpanel' aria-labelledby='profile-tab')
                    .container 
                        div profile!
                #posts.tab-pane.fade(role='tabpanel' aria-labelledby='posts-tab')
                    .container
                        a( href='/admin/posting' ) post editor  
                        div posts
                #categories.tab-pane.fade(role='tabpanel' aria-labelledby='categories-tab')


    script.
        
        