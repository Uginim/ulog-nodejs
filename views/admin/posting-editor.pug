extends layout

block content
    form#post-form(action='/post/write' method='post')
        .input-title 
            label(for='post-title') Title
            input.post-title.editor(type=text name='title')
        .input-content
            label(for='post-tags') Tags
            input.post-tag.editor(type=text name='tags')
        .input-content
            label(for='post-content')
            textarea.post-content.editor(name='content')          
        .input-content
            label(for='post-summary') Summary
            textarea.post-summary.editor(type=text name='summary')
        button#post-btn.btn(type='submit') POST      
    script(type="text/javascript" src="http://lab.lepture.com/editor/editor.js")
    script(type="text/javascript" src="http://lab.lepture.com/editor/marked.js")
    script.
        var editor = new Editor();
        editor.render();
