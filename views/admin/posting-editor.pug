extends layout

block content
    .container
        form#post-form.form-group(action='/post/write' method='post')
            h1
            .input-group.hidden-input
                if id
                    input(type='text' name='id' value=id)
                if postContent
                    label(for='content')                
                    textarea.post-content.editor(name='content') #{postContent}
                else 
                    label(for='content')                
                    textarea.post-content.editor(name='content')
            .input-group.my-3
                if title
                    input.form-control(type='text' name='title' placeHolder='Title' value =title)
                else 
                    input.form-control(type='text' name='title' placeHolder='Title')
            .input-group.mb-3
                select(name="category")
                    option(value='root' selected) / 
                    each category in categories   
                            - if(category.id === categoryId)
                                option(value=category.id selected) #{category.name}
                            - else 
                                option(value=category.id ) #{category.name}
            .input-group
                label(for='post-content')
                #body-section.form-control.vh-100
            .my-3.container
                .row
                    input#image-input(type='file' accept="image/*")
                .row
                    ul#image-list
            .input-group.my-3
                .input-group-prepend
                    span.input-group-text  Tags
                input.form-control(type='text' name='tags')        
            .input-group.mb-3
                .input-group-prepend
                    span.input-group-text Summary
                textarea.form-control(type='text' name='summary')
            button#post.form-control.btn-primary.py-1.h-100(type='submit') POST        
        script.

            
            
