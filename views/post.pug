extends layout


block content
    div(class='row mb-2')
        each post in posts
            div(class='col-md-6 mb-4')
                div(class='blog-post-card')
                    div(class='card-body')
                        if post.tags && post.tags.length > 0
                            div(class='mb-3')
                                each tag in post.tags
                                    span(class='post-tag') ##{tag.title}
                        - var year = post.createdAt.getFullYear(), month = String(post.createdAt.getMonth() + 1).padStart(2, '0'), day = String(post.createdAt.getDate()).padStart(2, '0');
                        h3(class='mb-2 font-weight-bold')=post.title
                        div(class='post-date mb-3') #{year}.#{month}.#{day}
                        p(class='post-summary') #{post.summary || '미리보기 없음'}
                        a(class='post-read-more' href=`./post/${post.id}`) 더 읽기

                            



                            
            