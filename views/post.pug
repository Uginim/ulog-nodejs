extends layout


block content
    div(class='row mb-2')        
        each post in posts
            div(class='col-md-6')
                div(class='row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative')
                    div(class='col p-4 d-flex flex-column position-static')
                        if post.tags
                            each tag in post.tags
                                strong(class='d-inline-block mb-2 text-primary') #{tag.title}
                        - var year = post.createdAt.getFullYear(), month = ''+post.createdAt.getMonth(), day = ''+post.createdAt.getDate();
                        h3(class='mb-0')=post.title
                        div(class='mb-1 text-muted') #{year}-#{month}-#{day}
                        p(class='card-text mb-auto') #{post.summary}
                        a(class='stretched-link' href=`./post/${post.id}`) Continue reading
                    div(class='col-auto d-none d-lg-block')
                        svg(class='bd-placeholder-img' width='200' height='250' xmlns='http://www.w3.org/2000/svg'
                            preserveAspectRatio='xMidYMid slice' focusable='false' role='img' aria-label='Placeholder: Thumbnail')
                            title Placeholder
                            rect(width='100%' height='100%' fill='#55596c')
                            text(x='50%' y='50%' fill='#eceeef' dy='.3em') Thumbnail

                            



                            
            